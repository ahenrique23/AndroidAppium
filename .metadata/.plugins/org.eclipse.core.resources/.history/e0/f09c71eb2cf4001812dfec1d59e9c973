package test;

import org.junit.Assert;

import appium.core.BaseTest;
import page.MenuPage;
import page.TabsPage;

public class TabsTest extends BaseTest {

	private MenuPage menu = new MenuPage();
	private TabsPage page = new TabsPage();
	
	public void deveTestarAbas() {
		//Acessar menu abas
		menu.acessarAbas();
		//Conferir texto
		Assert.assertEquals("Este é o conteúdo da Aba 1", page.obterTextoAbas());
		//Acessar aba 2
		page.clicarAba2();
		//Conferir texto
		Assert.assertEquals("Este é o conteúdo da Aba 2", page.obterTextoAbas());
		
	}
}
