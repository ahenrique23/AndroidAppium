package page;

import org.junit.Assert;
import org.openqa.selenium.By;

import appium.core.DSL;
import io.appium.java_client.MobileBy;

public class FormularioPage {
	
	private DSL dsl = new DSL();

		
	public void escreverNome(String nome) {
		dsl.escrever(MobileBy.AccessibilityId("nome"), nome);
	}
	
	public void obterNome(String nome) {
		Assert.assertEquals(nome, dsl.obterTexto(MobileBy.AccessibilityId("nome")));
	}
	
	public void selecionarCombo(String combo) {
		dsl.selecionarCombo(MobileBy.AccessibilityId("console"), combo);
	}
	
	public String obterValorCombo() {
		return dsl.obterTexto(By.xpath("//android.widget.Spinner/android.widget.TextView"));				
	}
}
